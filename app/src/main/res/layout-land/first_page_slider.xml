<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/planet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/imageMarginTop"
        android:contentDescription="@string/icon_question1_description"
        android:src="@drawable/worldwide256" />
    <!--Icon by Vector Market from www.flaticon.com-->
    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/planet"
        android:layout_marginBottom="@dimen/cardview_margin_bottom"
        android:layout_marginLeft="@dimen/cardview_margin_side"
        android:layout_marginRight="@dimen/cardview_margin_side"
        android:layout_marginTop="@dimen/cardview_top"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/cardview_cornerradius"
        app:cardElevation="@dimen/cardview_elevation">

        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/question_text_margin_top"
            android:fontFamily="@font/delius_swash_caps"
            android:text="@string/question1"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/question_text_size" />

        <CheckBox
            android:id="@+id/q1a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/answer_margin_left"
            android:layout_marginStart="@dimen/answer_margin_left"
            android:layout_marginTop="@dimen/answer1_margin_top"
            android:fontFamily="@font/delius_swash_caps"
            android:onClick="addPointsForQuestion1"
            android:text="@string/q1a1"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/textSize" />

        <CheckBox
            android:id="@+id/q1a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/answer_margin_left"
            android:layout_marginStart="@dimen/answer_margin_left"
            android:layout_marginTop="@dimen/answer2_margin_top"
            android:onClick="addPointsForQuestion1"
            android:fontFamily="@font/delius_swash_caps"
            android:text="@string/q1a2"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/textSize" />

        <CheckBox
            android:id="@+id/q1a3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/answer4_padding_bottom"
            android:layout_marginLeft="@dimen/answer_margin_left"
            android:layout_marginStart="@dimen/answer_margin_left"
            android:layout_marginTop="@dimen/answer3_margin_top"
            android:fontFamily="@font/delius_swash_caps"
            android:onClick="addPointsForQuestion1"
            android:text="@string/q1a3"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/textSize" />
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/nextButton_margin_bottom"
        android:text="@string/next"
        android:textSize="@dimen/ButtonTextSize"
        android:fontFamily="@font/delius_swash_caps"
        android:background="@android:color/white"
        android:onClick="GoToQuestion2"/>

</RelativeLayout>
</ScrollView>